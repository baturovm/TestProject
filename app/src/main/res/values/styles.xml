<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorOnPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TitleMovieText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="GenreText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="EmptyText" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/empty_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="LargeTitleMovieText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="InfoMovieText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/subTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="RatingText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="KinoPoiskText" parent="RatingText">
        <item name="android:text">@string/kinopoisk</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="DescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/favorite_states</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">

        <item name="itemIconTint">@color/nav_view_text_color</item>
        <item name="itemTextColor">@color/nav_view_text_color</item>
    </style>
</resources>